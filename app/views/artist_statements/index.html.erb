
	<div ng-app="app">
		<div ng-controller="artistsCtrl" >
			<div ng-init="getUserInfo(<%= current_user.id %>)" >
			</div>
			
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa fa-arrow-circle-right"></i> Artist Statements</h3>
			</div>
			<div class="panel panel-default">
				<table class="table table-bordered table-hover table-striped" >
					<tr>
						<th> Category</th>
						<th colspan="2"> Statement</th>

					</tr>
					<tr ng-repeat="statement in user.statements" >
						<td><b>{{statement.description}}</b></td>
						<td>{{statement.statement}}</td>
						<td>update  <a ng-click="remove(item)">Delete</a></td>
					</tr>
				</table>
			</div>
			<a href ng-click="visible = !visible"> add a new Statement</a>
			<div ng-show="visible" class="form-group" ng-class="ng-hide">
			<label>Category</label>
			<input class="form-control" ng-model="newArtistStatementDescription">
			<label>Statement</label>
			<input class="form-control" row="3" ng-model="newArtistStatementStatement">
			<button class="btn btn-default" ng-click="addArtistStatement(newArtistStatementDescription, newArtistStatementStatement)">Add statement</button>
			</div>
		</div>
	</div>
