<div ng-app="app">
<div ng-controller="artistsCtrl">
<div class="col-lg-5">
	<div ng-init="getUserInfo(<%= current_user.id %>)" ></div>
		<div class="panel-heading">
		<h2 class="panel-title"><i class="fa fa-arrow-circle-right"></i>Opportunities to Apply for</h2>
		</div>
			<div class="panel panel-default" ng-repeat="opportunity in user.opportunities" >
				<table class="table table-bordered table-hover table-striped" >
			<tr >
				<td> Deadline</td>
				<td> Title</td>
				<td>Fee</td>
				
			</tr >
			<tr >
				<td>{{opportunity.deadline}}</td>
				<td>{{opportunity.opportunity}} <br> <a href="{{opportunity.url}}">url</a></td>
				<td>$ {{opportunity.fee}}</td>				
			</tr>
			</table>
			<div ng-repeat="deadline in opportunity.deadlines" >

			<table class ="table" >
				<tr>
					<td colspan="3" class="panel-title"><i class = "fa fa-arrow-circle-right"> Need to do</td>
				</tr>
				
				<tr>
					<td>{{ deadline.name }}</td>
					<td>{{ deadline.description}}</td>
					<td>{{ deadline.date }}</td>
				</tr>
			</table>
			</div>

			</div>
</div>

	