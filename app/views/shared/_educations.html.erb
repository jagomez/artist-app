<div ng-app="app">
<div ng-controller="artistsCtrl">
		<div ng-init="getUserInfo(<%= current_user.id %>) "></div>
		<!-- {{ 1 + 1 }} -->
		<h3>Education:</h3>
		<ul class="unstyled">
			<li ng-repeat="education in user.educations">
				{{ education.year }} - {{ education.school }}, {{ education.degree }}
			</li>
		</ul>

		<a href ng-click="visible = !visible"> add education</a>
		<div ng-show="visible" class="form-group" ng-class="ng-hide">
		<label>School</label>
		<input class="form-control" ng-model="newEducationSchool">
		<label>Year</label>
		<input class="form-control" ng-model="newEducationYear">
		<label>Degree</label>
		<input class="form-control" ng-model="newEducationDegree">
		<button class="btn btn-default" ng-click="addEducation(newEducationSchool, newEducationYear, newEducationDegree)">Add a degree</button>
		</div>
	</div>
</div>