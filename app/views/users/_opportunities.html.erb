<div class="col-lg-5">
	<div class="panel-heading">
		<h2 class="panel-title"><i class="fa fa-arrow-circle-right"></i>Opportunities to Apply for</h2>
	</div>
		<% current_user.opportunities.each do |opportunity| %>
			<div class="panel panel-default">
				<table class="table table-bordered table-hover table-striped">
					<tr>
					<!-- <th>DueDate</th>
					<th>Project Name</th>
					<th>Project Scope</th>
					<th>Fee</th>
					<th>Prerequisite</th>

					</tr> -->
					<tr>
					<td><a href="<%= opportunity_path(opportunity.id) %>"><%= opportunity.deadline %></a></td>
					<td><%= opportunity.projectname %><br>
						<i class="fa fa-arrow-circle-right"><a href="<%= opportunity.url %>" target="_blank"> url to original post</a></td>
					<td><%= truncate opportunity.project_scope %></td>
					<td><%= opportunity.fee %></td>
					<td><%= opportunity.prereq %></td>

					</tr>
				</table>

				<%= render "deadlines", opportunity: opportunity %>
				
			</div>
		<% end %>
	<div class="text-right">
		<a href="<%= new_opportunity_path %>">Add a new Opportunity <i class="fa fa-arrow-circle-right"></i></a>
	</div>
</div>